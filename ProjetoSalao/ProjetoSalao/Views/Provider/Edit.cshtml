@model Provider
@{
    ViewData["Title"] = "Editar Fornecedor";
}

<h1>Editar Fornecedor</h1>

<p>Por favor preencher todos os campos</p>

<form asp-controller="Provider" asp-action="Edit" method="post">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="mb-3">
    <label for="Name" class="form-label">Nome</label>
    <input type="text" asp-for="Name" class="form-control" id="name">
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label for="Cpf" class="form-label">CPF</label>
    <input type="text" asp-for="Cpf" class="form-control" id="Cpf">
    <span asp-validation-for="Cpf" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label for="Contato" class="form-label">Contato</label>
    <input type="text" asp-for="Contact" class="form-control" id="Contato">
    <span asp-validation-for="Contact" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label for="Endereço" class="form-label">Endereço</label>
    <input type="text" asp-for="Adress" class="form-control" id="Endereço">
   <span asp-validation-for="Adress" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label for="complemento" class="form-label">Complemento</label>
    <input type="text" asp-for="Complement" class="form-control" id="complemento">
    <span asp-validation-for="Complement" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label for="cep" class="form-label">Cep</label>
    <input type="text" asp-for="ZipCode" class="form-control" id="cep">
    <span asp-validation-for="ZipCode" class="text-danger"></span>
  </div>

  <div class="col-12">
        <button type="submit" class="btn btn-dark">Editar</button>
        <a role="button" asp-action="index" asp-controller="Provider" class="btn btn-dark">Voltar</a>
  </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
